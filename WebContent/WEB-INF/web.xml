<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Facebook</display-name>
  
  <description>
		A simple facebook application.
	</description>
 	
	<servlet>
		<servlet-name>friends</servlet-name>
		<servlet-class>ch.ethz.globis.web.facebook.Friends</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>friends</servlet-name>
		<url-pattern>/servlet/friends</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>friendsdetail</servlet-name>
		<servlet-class>ch.ethz.globis.web.facebook.FriendsDetail</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>friendsdetail</servlet-name>
		<url-pattern>/servlet/friendsdetail</url-pattern>
	</servlet-mapping>
	
	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>